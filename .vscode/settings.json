{
  "editor.formatOnSave": true,
  "editor.renderWhitespace": "boundary",
  "editor.trimAutoWhitespace": true,
  "editor.tabSize": 4,
  "files.exclude": {
    ".pytest_cache": true,
    "**/__pycache__": true,
    "**/*.pyc": true
  },
  "files.insertFinalNewline": true,
  "[python]": {
    "editor.defaultFormatter": "ms-python.black-formatter"
  },
}
